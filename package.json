    "@remix-run/vercel": "^1.7.0",
    "@tailwindcss/forms": "^0.5.3",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.29.2",
    "date-fns-tz": "^1.3.7",
    "dotenv": "^16.0.2",
    "framer-motion": "^7.2.1",
    "ics": "^2.40.0",
    "nodemailer": "^6.7.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.7.0",
    "@remix-run/eslint-config": "^1.7.0",
    "@remix-run/serve": "^1.7.0",
