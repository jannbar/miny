    "eslint": "^8.23.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "prisma": "^4.3.1",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 80
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false,
  "prisma": {
